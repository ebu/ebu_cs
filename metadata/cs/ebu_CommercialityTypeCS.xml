      <ChangeVersionDate>2019</ChangeVersionDate>
      <ValidityFlag>1</ValidityFlag>
   </Term>
   <Term termID="2">
      <Name xml:lang="en">non-commercial</Name>
      <Name xml:lang="de">nichtkommerziell</Name>
      <Definition xml:lang="en">Non-commercial use is any use without the intention of making a
         profit.</Definition>
      <Reference/>
      <ChangeComment>First version within the Dwerft project</ChangeComment>
      <ChangeVersionDate>2019</ChangeVersionDate>
      <ValidityFlag>1</ValidityFlag>
   </Term>
