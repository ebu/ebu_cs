  <Alias>DwerftTimecodeType</Alias>
  
  <Term termID="1">
    <Name xmlns:lang="en">Relative</Name>
    <Definition xmlns:lang="en">The Timecode relates to the boundaries of the clip. The clip always
      starts at 00:00:00:00</Definition>
    <Reference/>
    <ChangeComment>First version within the Dwerft project</ChangeComment>
    <ChangeVersionDate>2019</ChangeVersionDate>
    <ValidityFlag>1</ValidityFlag>
  </Term>
  <Term termID="2">
    <Name xmlns:lang="en">Absolute</Name>
    <Definition xmlns:lang="en">The Timecode relates to another timecode supplier e.g. the
      time-of-day (source timecode) or the timecode on a timeline (record timecode).</Definition>
    <Reference/>
    <ChangeComment>First version within the Dwerft project</ChangeComment>
    <ChangeVersionDate>2019</ChangeVersionDate>
    <ValidityFlag>1</ValidityFlag>
  </Term>
</ClassificationScheme>
